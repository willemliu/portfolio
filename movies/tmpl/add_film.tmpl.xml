<patTemplate:tmpl name="body">
<?xml version="1.0" encoding="ISO-8859-1"?>
<xml>
  <fileName>{FILE_NAME}</fileName>
  <item>
    <html>
      &lt;div CLASS="WINDOW_BAR"&gt;
        &lt;div class="WINDOW_TITLE"&gt;
          Add Film
        &lt;/div&gt;
        &lt;a onClick="var fade = new MyFade(); fade.FadeOut('ADD_FILM',0, 1, 'fade'); postData('window_close.php', '', 'window=ADD_FILM');" onMouseDown="mouse.dispensemove();"&gt;
          Close
        &lt;/a&gt;
      &lt;/div&gt;
    </html>
  </item>
  <patTemplate:tmpl name="show_films" type="SimpleCondition" requiredVars="CONDITION">
  <item>
    <html>
      Title:
      &lt;br&gt;
    </html>
  </item>
  <item>
    <html>
      &lt;select id="add_film_film_id" name="add_film_film_id" onMouseDown="mouse.dispensemove();"&gt;
    </html>
  </item>
  <patTemplate:tmpl name="film">
  <item>
    <html>
        &lt;option value="{FILM_ID}"&gt;{FILM_TITLE} - {FILM_DURATION} Min - {FILM_COLOR}&lt;/option&gt;
    </html>
  </item>
  </patTemplate:tmpl>
  <item>
    <html>
      &lt;/select&gt;
    </html>
  </item>
  </patTemplate:tmpl>
  <item>
    <html>
      &lt;a onClick="getData('new_film.php', 'NEW_FILM');" onMouseDown="mouse.dispensemove();"&gt;New&lt;/a&gt;
    </html>
  </item>
  <patTemplate:tmpl name="show_mediums" type="SimpleCondition" requiredVars="CONDITION">
  <item>
    <html>
      &lt;br&gt;
      &lt;br&gt;
    </html>
  </item>
  <item>
    <html>
      Medium (Hold CTRL to select more):
      &lt;br&gt;
    </html>
  </item>
  <item>
    <html>
      &lt;select id="add_film_medium_id[]" name="add_film_medium_id[]" multiple="multiple" size="5" onMouseDown="mouse.dispensemove();"&gt;
    </html>
  </item>
  <patTemplate:tmpl name="medium">
  <item>
    <html>
      &lt;option value="{MEDIUM_ID}"&gt;{MEDIUM}&lt;/option&gt;
    </html>
  </item>
  </patTemplate:tmpl>
  <item>
    <html>
      &lt;/select&gt;
    </html>
  </item>
  <item>
    <html>
      &lt;br&gt;
      &lt;br&gt;
    </html>
  </item>
  </patTemplate:tmpl>
  <patTemplate:tmpl name="show_film_details" type="SimpleCondition" requiredVars="CONDITION">
  <item>
    <html>
      &lt;a onMouseDown="mouse.dispensemove();"&gt;
        Show details
      &lt;/a&gt;
    </html>
  </item>
  </patTemplate:tmpl>
  <item>
    <html>
      &lt;br&gt;
    </html>
  </item>
  <item>
    <html>
      &lt;input type="button" id="add_film_add" name="add_film_add" value="Add" onClick="{UPDATE_COMMAND}" onMouseDown="mouse.dispensemove();"&gt;
    </html>
  </item>
  <patTemplate:tmpl name="setTimeout">
  <setTimeout>
    <Command>{COMMAND}</Command>
    <TimeOut>
      {MILLISECONDS}
    </TimeOut>
  </setTimeout>
  </patTemplate:tmpl>
</xml>
</patTemplate:tmpl>