<patTemplate:tmpl name="body">
<?xml version="1.0" encoding="ISO-8859-1"?>
<xml>
  <fileName>{FILE_NAME}</fileName>
  <item>
    <html>
      &lt;div CLASS="WINDOW_BAR"&gt;
        &lt;div class="WINDOW_TITLE"&gt;
          View Cast
        &lt;/div&gt;
        &lt;a onClick="var fade = new MyFade(); fade.FadeOut('VIEW_CAST',0, 1, 'fade'); postData('window_close.php', '', 'window=VIEW_CAST');" onMouseDown="mouse.dispensemove();"&gt;
          Close
        &lt;/a&gt;
      &lt;/div&gt;
    </html>
  </item>
  <item>
    <html>
      Film: {FILM}
      &lt;br&gt;
      Submitted by: {NICK_NAME}
      &lt;br&gt;
    </html>
  </item>
  <item>
    <html>
      &lt;a onClick="postData('remove_cast.php', 'INFORMATION', 'film_id={FILM_ID}&amp;cast_id={CAST_ID}');" onMouseDown="mouse.dispensemove();"&gt;[Remove from Film]&lt;/a&gt;
      &lt;br&gt;
    </html>
  </item>
  <item>
    <html>
      Name*:
      &lt;br&gt;
      &lt;input type="text" id="view_cast_name" name="view_cast_name" value="{NAME}" onMouseDown="mouse.dispensemove();"&gt;
      &lt;br&gt;
      &lt;br&gt;
    </html>
  </item>
  <item>
    <html>
      Birth date (yyyy-mm-dd):
      &lt;br&gt;
      &lt;input type="text" id="view_cast_birth_date" name="view_cast_birth_date" value="{BIRTH_DATE}" onMouseDown="mouse.dispensemove();"&gt;
      &lt;br&gt;
      &lt;br&gt;
    </html>
  </item>
  <item>
    <html>
      Description:
      &lt;br&gt;
      &lt;textarea id="view_cast_description" name="view_cast_description" rows="10" cols="40" onMouseDown="mouse.dispensemove();"&gt;{DESCRIPTION}&lt;/textarea&gt;
      &lt;br&gt;
      &lt;br&gt;
    </html>
  </item>
  <item>
    <html>
      Gender:
      &lt;br&gt;
      &lt;select id="view_cast_gender_id" name="view_cast_gender_id" onMouseDown="mouse.dispensemove();"&gt;
    </html>
  </item>
  <patTemplate:tmpl name="gender">
  <item>
    <html>
    &lt;option value="{GENDER_ID}" {SELECTED}&gt;{GENDER}&lt;/option&gt;
    </html>
  </item>
  </patTemplate:tmpl>
  <item>
    <html>
      &lt;/select&gt;
      &lt;br&gt;
    </html>
  </item>
  <item>
    <html>
      &lt;input type="hidden" id="view_cast_cast_id" name="view_cast_cast_id" value="{CAST_ID}"&gt;
    </html>
  </item>
  <item>
    <html>
      &lt;input type="button" id="edit_cast_edit" name="edit_cast_edit" value="Save" onMouseDown="mouse.dispensemove();" onClick="{UPDATE_COMMAND}"&gt;
    </html>
  </item>
  <patTemplate:tmpl name="setTimeout">
  <setTimeout>
    <Command>{COMMAND}</Command>
    <TimeOut>
      {MILLISECONDS}
    </TimeOut>
  </setTimeout>
  </patTemplate:tmpl>
</xml>
</patTemplate:tmpl>